#include <iostream>
using namespace std;
bool czypierwsza(int a);
int main()
{
	
	int a = 13;
	if(czypierwsza(a))
		cout << "jest liczba piersza";
	else
		cout << "nie jest liczba pierwsza";
}
bool czypierwsza(int a) {
	if (a < 2)
		return 0;
	for (int i = 2; i*i <= a; i++)
		if (a % i == 0)
			return 1;
		return 0;

}
    
