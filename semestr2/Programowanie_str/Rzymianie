class RomanNumeral:
    def __init__(self, roman_numeral):
        self.roman_numeral = roman_numeral

    def __str__(self):
        return self.roman_numeral

    def __add__(self, other):
        if isinstance(other, RomanNumeral):
            return RomanNumeral(self.roman_numeral + other.roman_numeral)
        else:
            raise TypeError("Obiekt musi być instancją klasy RomanNumeral")

    def __sub__(self, other):
        if isinstance(other, RomanNumeral):
            return RomanNumeral(self.roman_numeral.replace(other.roman_numeral, ''))
        else:
            raise TypeError("Obiekt musi być instancją klasy RomanNumeral")

    def __mul__(self, other):
        if isinstance(other, int):
            return RomanNumeral(self.roman_numeral * other)
        else:
            raise TypeError("Mnożenie jest obsługiwane tylko przez liczbę całkowitą")

# Przykładowe użycie klasy RomanNumeral
roman_numeral_1 = RomanNumeral("X")
roman_numeral_2 = RomanNumeral("V")
print(roman_numeral_1)  # Wyświetli: X

# Dodawanie dwóch liczb rzymskich
result_add = roman_numeral_1 + roman_numeral_2
print(result_add)  # Wyświetli: XV

# Odejmowanie jednej liczby rzymskiej od drugiej
result_sub = roman_numeral_1 - roman_numeral_2
print(result_sub)  # Wyświetli: V

# Mnożenie liczby rzymskiej przez liczbę całkowitą
result_mul = roman_numeral_1 * 3
print(result_mul)  # Wyświetli: XXX
