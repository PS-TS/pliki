#include <iostream>
using namespace std;
int main()
{
    string tekst;
    bool j = 1;
    cout << "Podaj string: ";
    cin >> tekst;
    for (int i = 0; i < tekst.length(); i++) {
        cout << tekst[i];
        if (tekst[i] == 'a' && j == 1){
            cout << endl;
            j=0;
         }   
    }
        

}
